                var thisposition = snapshot.child("posicion").val();

                firebase.database().ref("Talentos").child("Actores").once("value").then(function(snapshot2){
                    snapshot2.forEach(function(data){
                        firebase.database().ref("Talentos").child("Actores").child(data.key).once("value").then(function(snapshot3){
